record(waveform,"$(P)$(R)waveform$(N)")
{
    field(DTYP,"$(DTYPE)")
    field(INP, "@asyn($(PORT), $(N), $(TIMEOUT))READ_DATA")
    field(SCAN,"I/O Intr")
    field(NELM, "$(SIZE)")
    field(FTVL, "$(TYPE)")
}

